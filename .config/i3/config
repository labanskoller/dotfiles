set $WS_3_NAME                  teams
set $WS_4_NAME                  spotify

exec --no-startup-id xautolock -time 5 -locker i3lock
exec --no-startup-id numlockx on
exec --no-startup-id xsetroot -solid "#333333"
exec --no-startup-id xrandr --output DP-2-3 --rotate left
exec --no-startup-id nm-applet
exec --no-startup-id ~/bin/monitor_setup.sh
#exec --no-startup-id xinput --disable 13
exec --no-startup-id xinput --disable $(xinput | grep TouchPad | grep --only-matching "id=.." | cut --delimiter = --fields 2)

